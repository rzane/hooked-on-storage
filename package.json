{
  "version": "0.1.0",
  "name": "use-stored",
  "repository": "https://github.com/rzane/use-stored",
  "description": "Store and rehydrate values in storage.",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "clean": "rm -rf dist",
    "format": "prettier --write '{src,test}/**/*.{js,ts,tsx}'",
    "format:check": "prettier --check '{src,test}/**/*.{js,ts,tsx}'",
    "start": "microbundle --jsx React.createElement --watch",
    "prepack": "microbundle --jsx React.createElement"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/**/*.test.{ts,tsx}"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "jest": "^25.2.3",
    "microbundle": "^0.12.0-next.8",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
